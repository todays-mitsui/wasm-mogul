{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "ignore": ["*.d.ts"],
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true,
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  }
}
